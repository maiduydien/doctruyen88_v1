<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Danh sach cac users</title>
</head>
<body>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Log-in Name</th>
      <th scope="col">Role</th>
      <th scope="col">Email address</th>
      <th scope="col">Actions</th>

    </tr>
  </thead>
  <tbody>
    <% for(var i=0; i<userList.length; i++) {%>
        <tr>
                <th scope="row"><%= i+1%></th>
                <td><%= userList[i].name %></td>
                <td><%= userList[i].loginName%></td>
                <td><%= userList[i].roleid ==='1'? "Quan tri vien":"Ban Doc"%></td>
                <td><%= userList[i].email%></td>
                <td>
                    <div class="btn btn-warning pl-4 pr-4 pt-0 pb-0"> <a class='text-danger' href="/edit?id=<%= userList[i].id%>">Sửa</a> </div>
                    <div class="btn btn-dark pl-4 pr-4 pt-0 pb-0"> <a a class='text-light' href="/delete?id=<%= userList[i].id%>">Xoá</a> </div>

                </td>
        </tr>
    <% } %>
  </tbody>
</table>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>