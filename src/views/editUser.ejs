<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Sua nguoi dung</title>
</head>
<body>
    <div class="content-wrap container">
        <form action="/updating" method="post" > 
            <div class="form-group">
                <label for="id">ID</label>
                <input type="text" class="form-control" id="id" name="id" value=<%=user.id%>>
            </div>
            <div class="form-group">
                <label for="name">Họ và tên</label>
                <input type="text" class="form-control" id="name" name="name" value="<%=user.name%>"">
            </div>
            <div class="form-group">
                <label for="info">Mô tả bản thân (Tuỳ chọn)</label>
                <input type="textarea" class="form-control" id="info" name="info" value="<%=user.info%>"" >
            </div>
            <div class="form-group">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%=user.email%>"">
            </div>
            <div class="form-group">
                <label for="loginName">Tên đăng nhập</label>
                <input type="text" class="form-control" id="loginName" name="loginName"  value="<%=user.loginName%>"">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <div class="form-group col-md-6">
                    <label for="confirmPassword">Nhập lại Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"  placeholder="Nhập lại mật khẩu">
                </div>
            </div>
            <div class="form-group">
                <label for="gender">Giới tính</label>
                <select id="gender" name="gender" class="form-control" >
                    <%if(user.gender===1){%>
                        <option value="1" selected>Nam</option>
                        <option value="0">Nữ</option>
                    <%} else {%>
                        <option value="1" >Nam</option>
                        <option value="0" selected>Nữ</option>
                    <%}%>
                </select>
            </div>
            <div class="form-group">
                <label for="roleid">Loại người dùng</label>
                <select id="roleid" name="roleid" class="form-control" >
                    <%if(user.roleid==="0"){%>
                            <option value="0" selected > Bạn đọc</option>
                            <option value="1" >Quản trị  viên</option>
                    <% } else { %>
                            <option value="0"  > Bạn đọc</option>
                            <option value="1" selected >Quản trị  viên</option> 
                    <%}%>
                </select>
            </div>
            <div class="form-group">
               <div class="custom-file">
                    <input type="file" class="custom-file-input" id="img" name="img" ">
                    <label class="custom-file-label" for="customFile"><%=user.img%></label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary" >Lưu lại</button>
        </form>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
</body>
</html>